{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",  // Or a version of your choice
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["node_modules/@types", "node_modules"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,  // Keeps type checking without generating output files
    "esModuleInterop": true,
    "module": "Node16",  // Set to 'Node16' to align with moduleResolution
    "moduleResolution": "Node16",  // Ensures Node-style resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
